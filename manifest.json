{
  "manifest_version": 2,

  "name": "YouChoose.AI",

  "short_name": "YCAI",
  "description": "Content creator should control their videos' recommendation",
  "version": "0.1.10",
  "author": "Tracking Exposed team, check it our on https://youchoose.ai",

  "icons": {
    "16": "ycai16.png",
    "48": "ycai48.png",
    "128": "ycai128.png"
  },

  "browser_action": {
    "default_icon": "ycai16.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "alarms",
    "http://localhost:9000/",
    "https://*.youtube.com/",
    "https://youchoose.tracking.exposed/"
  ],

  "background": {
    "scripts": ["./background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "https://youchoose.tracking.exposed/*",
        "https://*.youtube.com/*"
      ],
      "js": ["./app.js"],
      "css": ["./youchoose-ux.css"]
    }
  ],

  "web_accessible_resources": ["*.png", "styles.css", "youchoose-ux.css"]
}
